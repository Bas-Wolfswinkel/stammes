{
  "trailingComma": "es5",
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "printWidth": 3000,
  "bracketSpacing": true,
  "sortTailwindcssClasses": true,
  "wrapAttributes": "force-expand-multiline",
  "sortHtmlAttributes": "code-guide",
  "wrapAttributesMinAttrs": 5,
  "endWithNewLine": true,
  "plugins": [
    "@shufo/prettier-plugin-blade",
    "prettier-plugin-tailwindcss",
    "@prettier/plugin-php"
  ],
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "parser": "blade"
      }
    }
  ]
}
